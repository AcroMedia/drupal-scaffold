{
    "name": "acromedia/drupal-scaffold",
    "description": "Provides a development environment compatible with Acro Standards",
    "type": "local-dev",
    "version": "0.0.1",
    "authors": [
        {
            "name": "Cody Banman",
            "email": "cbanman@acromedia.com"
        }
    ],
    "require": {},
    "extra": {
        "drupal-scaffold": {
            "file-mapping": {
                "[web-root]/sites/default/settings.acro.php": "drupal/settings.acro.php",
                "[web-root]/sites/default/settings.php": {
                    "mode": "append",
                    "default": "drupal/settings.php",
                    "append": "drupal/settings-append.txt"
                },
                "[project-root]/tasks/.gitkeep": "tasks/.gitkeep",
                "[project-root]/tasks/__init__.py": {
                    "mode": "append",
                    "default": "tasks/__init__.py",
                    "append": "tasks/init-append.txt"
                },
                "[project-root]/invoke/acro.py": "tasks/acro.py",
                "[project-root]/lando/.lando.base.yml": ".lando.base.yml",
            }
        }
    }
}
