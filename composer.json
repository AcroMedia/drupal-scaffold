{
    "name": "cbanman/local-dev-docker4drupal",
    "description": "Facilitates local development with Docker4Drupal",
    "type": "local-dev",
    "version": "0.0.1",
    "authors": [
        {
            "name": "Cody Banman",
            "email": "cbanman@acromedia.com"
        }
    ],
    "require": {},
    "extra": {
        "drupal-scaffold": {
            "file-mapping": {
                "[project-root]/.docker4drupal/drupal/settings.docker4drupal.php": ".docker4drupal/drupal/settings.docker4drupal.php",
                "[web-root]/sites/default/settings.php": {
                    "mode": "append",
                    "default": ".docker4drupal/drupal/settings.default.php",
                    "append": ".docker4drupal/drupal/settings-append.txt"
                },
                "[project-root]/tasks/__init__.py": {
                    "mode": "append",
                    "force-append": true,
                    "append": "tasks/init-append.txt",
                    "default": "tasks/__init__.default.py"
                },
                "[project-root]/tasks/docker4drupal.py": "tasks/docker4drupal.py",
                "[project-root]/docker-compose.yml": "docker-compose.yml",
                "[project-root]/docker-sync.yml": "docker-sync.yml",
                "[project-root]/example.docker4drupal.env": "example.docker4drupal.env",
                "[project-root]/example.traefik.yml": "example.traefik.yml"
            }
        }
    }
}
